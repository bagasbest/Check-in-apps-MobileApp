<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_item_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@android:color/darker_gray"
                android:scaleType="fitXY"
                android:contentDescription="@string/image" />


        </FrameLayout>

        <TextView
            android:id="@+id/tv_hotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_hargaHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_hotelDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            >
        <Button
            android:id="@+id/bt_pesan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/pesan_kamar"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_btn"
            android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/bt_whistlist"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_toLeftOf="@+id/bt_pesan"
                android:layout_toStartOf="@+id/bt_pesan"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:padding="13dp"
                android:drawableTop="@drawable/ic_add_shopping_cart_black_24dp"
                android:background="@drawable/btn_border"/>

            <Button
                android:id="@+id/bt_chat"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_toLeftOf="@+id/bt_whistlist"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:padding="13dp"
                android:drawableTop="@drawable/ic_chat_black_24dp"
                android:background="@drawable/btn_border"
                android:layout_toStartOf="@+id/bt_whistlist" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>